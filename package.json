{
  "name": "canibrowse",
  "version": "1.0.0",
  "description": "Supported browser verification service",
  "main": "index.js",
  "author": "Levi Thomason",
  "license": "MIT",
  "scripts": {
    "lint": "prettier --list-different \"**/*.js?(on|x)\" && eslint \"**/*.js?(on|x)\"",
    "lint:fix": "prettier --write \"**/*.js?(on|x)\" && eslint --fix \"**/*.js?(on|x)\"",
    "toc": "markdown-toc -i README.md",
    "now-start": "node src",
    "precommit": "yarn toc && lint-staged",
    "postinstall": "yarn lint:fix",
    "start": "nodemon src",
    "test": "jest",
    "test:watch": "yarn jest -- --watchAll"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": ["src/**/*.js", "!**/node_modules/**", "!**/test/**"],
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "roots": ["./src", "./test"],
    "testMatch": ["**/*.spec.js"]
  },
  "lint-staged": {
    "*.js?(on|x)": ["prettier --write", "eslint --fix", "git add"]
  },
  "now": {
    "alias": "canibrowse.now.sh",
    "env": {
      "NODE_ENV": "production"
    }
  },
  "engines": {
    "node": "8.2.x"
  },
  "dependencies": {
    "bowser": "^1.7.1",
    "browserslist": "^3.0.0",
    "cors": "^2.8.4",
    "express": "^4.15.4",
    "lodash": "^4.17.4",
    "node-http-error": "^2.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.0",
    "eslint": "^4.4.1",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-prettier": "^2.2.0",
    "greenkeeper-lockfile": "^1.13.2",
    "husky": "^0.14.3",
    "jest": "^21.1.0",
    "lint-staged": "^5.0.0",
    "markdown-toc": "^1.1.0",
    "nodemon": "^1.11.0",
    "prettier": "prettier/prettier#5c539b06a477995c588aaf03a4662a4ad8c68c20"
  }
}
